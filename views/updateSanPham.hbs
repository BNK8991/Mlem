<body>
        <h1 align="center">Add new products</h1>
         <form action="/doAddProduct" method="post">
        <table align="center">
        
            <tr>
                <td>ID</td>
                <td><input type="text" name="txt_id" value="{{oldValue._id}}"</td>
            </tr>

